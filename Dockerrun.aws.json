{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "danny2327/multi-client",
            "hostname": "client",
            "essential":false
        },
        {
            "name": "server",
            "image": "danny2327/multi-server",
            "hostname": "api",
            "essential":false
        },
        {
            "name": "worker",
            "image": "danny2327/multi-worker",
            "hostname": "worker",
            "essential":false
        },
        {
            "name": "nginx",
            "image": "danny2327/multi-nginx",
            "essential":true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]
        }
    ]

}